<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Hyperlink?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" stylesheets="@style.css" fx:id="mainGridPane">
    <Button text="Save" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#handleSaveClick"/>
    <Button text="Open" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handleOpenClick"/>
    <Button text="button3" GridPane.rowIndex="0" GridPane.columnIndex="2" id="button3"/>
    <Button text="button4" GridPane.rowIndex="0" GridPane.columnIndex="3" fx:id="button4"/>
    <Button text="button5" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <RadioButton text="radiobutton" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Label fx:id="label1" text="JavaFX effects" GridPane.rowIndex="1" GridPane.columnIndex="1" onMouseEntered="#handleMouseOver" onMouseExited="#handleMouseExit" rotate="90" />
    <Hyperlink text="some link" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>